@model Crypto_Tracker.Models.Coin

@{
    ViewData["Title"] = "Index";
}

<h1>Cryptocurrency Info for @Model.Name:</h1>

<div>
    <h4>Coin</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @string.Format("{0:C}", Model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MarketCap)
        </dt>
        <dd class = "col-sm-10">
            @string.Format("{0:C}", Model.MarketCap)
        </dd>
    </dl>
</div>
<form action="">
    <div class="form-group">
        <label for="holdings">Enter your holdings of @Model.Name:</label>
        <input type="text" class="form-control" id="holdings" name="holdings">
    </div>
    <button type="submit" class="btn btn-primary">Add to Table</button>
</form>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
